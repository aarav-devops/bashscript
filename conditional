 #! /bin/bash

 VALUE=$(ip addr show | grep -v LOOPBACK | grep -ic mtu)

   if [ $VALUE -eq 1 ]
    then
      echo "Found single active network interface"

  elif [ $VALUE -gt 1 ]
    then
      echo "Found multiple active network interface"

  else 
      echo "No active network interface"
fi
