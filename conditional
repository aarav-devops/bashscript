#! /bin/bash

read -p "Enter a Number : " NUM
echo

  if [ $NUM -gt 100]
  then
    echo "We hav entered IF block"
    sleep 5
    echo "Your Number is greater than 100"
    echo 
    date

  fi 
  echo "Scrip execution completed successfully"

