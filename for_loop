#! /bin/bash

USERS="Alpha Beta Gama"
	for USR in $USERS
		do
			sleep 2
			echo "------------------------------------------------------"
			echo "				Creating new user $USR				"
			echo "------------------------------------------------------"
			echo ""
			echo ""
			echo "------------------------------------------------------"
			echo "				Created! User Id: $USR					"
			echo "------------------------------------------------------"
			echo ""
			echo ""
    done




