#! /bin/bash

	for VAR1 in java .net python ruby php
	do 
		echo "Looping..."
		sleep 2
		echo ""
		echo "------------------------------------------------------"
		echo "				Value of VAR1 is $VAR1					"
		echo "------------------------------------------------------"
		echo ""
		date
	done

